<body style="background-color:turquoise;"></body>

<h1>Favourite Animals!</h1>

<table class="table" style="text-align:center">
    <tr>
        <th style="text-align:center">DogId</th>
        <th style="text-align:center">Name</th>
        <th style="text-align:center">Breed</th>
        <th style="text-align:center">Weight(lbs)</th>
        <th style="text-align:center">Color</th>
        <th style="text-align:center">Sex</th>
        <th style="text-align:center">Age</th>
        <th style="text-align:center">Info</th>
        <th style="text-align:center">Proof of cuteness❤️❤️</th>
    </tr>
    @foreach (Favourite Fav in Model)
    {
        <tr>
            <td style="text-align:center"> @Fav.DogId </td>
            <td style="text-align:center"> @Fav.Dog.Name</td>
            <td style="text-align:center"> @Fav.Dog.Breed</td>
            <td style="text-align:center"> @Fav.Dog.Weight</td>
            <td style="text-align:center"> @Fav.Dog.Color</td>
            <td style="text-align:center"> @Fav.Dog.Sex</td>
            <td style="text-align:center"> @Fav.Dog.Age</td>
            <td style="text-align:center"> @Fav.Dog.Info</td>
            <td style="text-align:center">
                <img height="200"; height:auto; padding:25px; border:unset" src="@Fav.Dog.Pic">
            </td>
        </tr>
    }
</table>