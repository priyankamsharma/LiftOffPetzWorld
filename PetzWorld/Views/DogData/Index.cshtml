@using PetzWorld.Models;
@model List<DogData>;

@{
    ViewData["Title"] = "Dog Data sets";
}

<h1>List of all dog data</h1>

@if (Model.Count == 0)
{
    <p>No dog have been added yet!</p>
}

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Breed</th>
        <th>Weight (lbz)</th>
        <th>Color</th>
        <th>Sex</th>
        <th>Age</th>
        <th>Info</th>
        <th>Pic of the cuteness</th>

    </tr>

    @foreach (DogData DogData in Model)
    {
        <tr>
            <td>@DogData.Id</td>
       
            <td>@DogData.Breed</td>
            <td>@DogData.Weight</td>
            <td>@DogData.Color</td>
            <td>@DogData.Sex</td>
            <td>@DogData.Age</td>
            <td>@DogData.Info</td>
            <td>@DogData.Pic</td>
        </tr>
    }
</table>
