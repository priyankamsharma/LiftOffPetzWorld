@using PetzWorld.Models;
@model List<Dog>;

<body style="background-color:turquoise;"></body>

<h1>Favourite Animals!</h1>

@if (Model.Count == 0)
{
     <p>No favourite animal added yet!</p>
}
<table class="table" style="text-align:center">
    <tr>
        <th style="text-align:center">DogId</th>
        <th style="text-align:center">Name</th>
        <th style="text-align:center">Breed</th>
        <th style="text-align:center">Weight(lbs)</th>
        <th style="text-align:center">Color</th>
        <th style="text-align:center">Sex</th>
        <th style="text-align:center">Age</th>
        <th style="text-align:center">Info</th>
        <th style="text-align:center">Proof of cuteness❤️❤️</th>
    </tr>
</table>
@foreach (Dog Fav in Model)
{
        <tr>
            <td style="text-align:center"> @Fav.Id </td>
            <td style="text-align:center"> @Fav.Name</td>
            <td style="text-align:center"> @Fav.Breed</td>
            <td style="text-align:center"> @Fav.Weight</td>
            <td style="text-align:center"> @Fav.Color</td>
            <td style="text-align:center"> @Fav.Sex</td>
            <td style="text-align:center"> @Fav.Age</td>
            <td style="text-align:center"> @Fav.Info</td>
            <td style="text-align:center">
                <img height="200"; height:auto; padding:25px; border:unset" src="@Fav.Pic">
            </td>
        </tr>
    }
</table>