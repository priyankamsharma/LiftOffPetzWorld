@model PetzWorld.ViewModels.AddEventViewModel;

<body style="background-color:turquoise;"></body>

<h1>Add Events</h1>
<h5 class="text-light">Create an upcoming event here!</h5>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
    <label asp-for="Name"> Name: </label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />
    <div class="form-group">
    <label asp-for="EventDate"> Date: </label>
       @* <input type="datetime" asp-for="EventDate" />*@
       <input type="datetime-local" asp-for="EventDate" />  
        <span asp-validation-for="EventDate"></span>
    </div>
    <br />
    <br />
    <div class="form-group">
    <label asp-for="Description"> Description: </label>
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
     <input type="submit" value="Add Event" class="btn-primary" />
</form>
