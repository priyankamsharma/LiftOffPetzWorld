@model List<PetzWorld.Models.Event>

<body style="background-color:turquoise;">
</body>

<h1>Volunteer for List of Events</h1>

@if (Model.Count == 0)
{
    <p>No upcoming events!</p>
}

<table class="table" style="text-align:center">
    <tr>
        <th style="text-align:center">Volunteer(Y/N)</th>
        <th style="text-align:center">Name</th>
        <th style="text-align:center">Date</th>
        <th style="text-align:center">Description</th>
    </tr>

    @foreach (Event newEvents in Model)
    {
        <tr>
            <td>
                <form asp-controller="Volunteers" asp-action="Add" method="post">
                    <input type="submit" value="Add" />
                </form>
                <form asp-controller="Volunteers" asp-action="Delete" method="post">
                    <input type="submit" value="Delete" />
                </form>
            </td>
            <td>
                <input type="radio" name="eventIds" value="@newEvents.Id" class="form-control">
            </td>
            <td style="text-align:center"> @newEvents.Name</td>
            <td style="text-align:center"> @newEvents.Date</td>
            <td style="text-align:center"> @newEvents.Description</td>
        </tr>
    }

</table>

