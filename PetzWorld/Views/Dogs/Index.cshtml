@using PetzWorld.Models;
@model List<Dog>;

@{
    ViewData["Title"] = "Dogs List";
}

<h1>List of all Dogs</h1>

@if (Model.Count == 0)
{
     <p>No dogs have been added yet!</p>
}

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Breed</th>

        <th>Weight(lbs)</th>
        <th>Color</th>
        <th>Sex</th>
        <th>Age</th>
        <th>Info</th>
        <th>Proof of the cuteness</th>
   
    </tr>

    @foreach (Dog Dog in Model)
    {
        <tr>
            <td>@Dog.Id</td>
            <td>@Dog.Name</td>
            <td>@Dog.Breed</td>
            <td>@Dog.Weight</td>
            <td>@Dog.Color</td>
            <td>@Dog.Sex</td>
            <td>@Dog.Age</td>
            <td>@Dog.Info</td>
            <td>@Dog.Pic</td>
            </tr>
    }
</table>